<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="8dp"
    android:background="#CACACA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:src="@drawable/ic_pin"
            android:layout_height="36dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Date: " />

                <TextView
                    android:id="@+id/task_row_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.01.2017" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Time: " />

                <TextView
                    android:id="@+id/task_row_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:05" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:text="Description: " />

                <TextView
                    android:id="@+id/task_row_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Buy flowers for Daniel" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/task_row_button"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_keyboard_right_arrow_button"
            android:layout_height="wrap_content" />


    </LinearLayout>


</android.support.v7.widget.CardView>
